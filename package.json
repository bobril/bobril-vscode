{
  "name": "bobril",
  "displayName": "bobril",
  "description": "Help you to code in Bobril",
  "version": "0.6.0",
  "publisher": "bobris",
  "engines": {
    "vscode": "^1.42.0"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/bobril/bobril-vscode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "*",
    "@types/mocha": "*",
    "@types/node": "*",
    "@types/vscode": "*",
    "glob": "*",
    "mocha": "*",
    "eslint": "*",
    "typescript": "*",
    "vscode-test": "*"
  },
  "contributes": {
    "snippets": [
      {
        "language": "typescriptreact",
        "path": "./snippets/ts.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/ts.json"
      }
    ],
    "commands": [
      {
        "category": "Bobril",
        "command": "bobril.toggleCoverage",
        "title": "Toggle Coverage"
      },
      {
        "category": "Bobril",
        "command": "bobril.toggleLiveReload",
        "title": "Toggle Live Reload"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          ".bbrc"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".bbrc",
        "url": "./schema/bbrc.json"
      }
    ]
  }
}